<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.SkinnablePopUpContainer")]
		]]>
	</fx:Metadata> 
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
		<s:State name="closed" stateGroups="closedGroup"/>
		<s:State name="disabledAndClosed" stateGroups="closedGroup"/>
	</s:states>
	
	<!-- Transitions for open and close -->
	<s:transitions>
		<s:Transition fromState="closed" toState="normal" autoReverse="true">
			<s:Fade duration="300" target="{chrome}"/>
		</s:Transition>
		
		<s:Transition fromState="disabledAndClosed" toState="disabled" autoReverse="true">
			<s:Fade duration="300" target="{chrome}"/>
		</s:Transition>
		
		<s:Transition fromState="normal" toState="closed" autoReverse="true">
			<s:Fade duration="300" target="{chrome}"/>
		</s:Transition>
		
		<s:Transition fromState="disabled" toState="disabledAndClosed" autoReverse="true">
			<s:Fade duration="300" target="{chrome}"/>
		</s:Transition>
	</s:transitions>
	
	<!--- Defines the background and content group used by this skin. -->
	<s:Group id="chrome" left="0" right="0" top="0" bottom="0" visible.closedGroup="false">
		
		<!-- Background and border - sets one corner rounded and adds a drop shadow filter-->
		<s:Rect alpha="1" left="0" right="0" top="1" bottom="0" id="background" topRightRadiusX="15" bottomLeftRadiusX="15">
			<s:filters>
				<s:DropShadowFilter color="0x000000" blurX="10" />
			</s:filters>
			<s:fill> 
				<!-- <s:SolidColor color="0xF9F1D3"/> -->
				<s:SolidColor color="0xD0D0E0"/>
			</s:fill>
			<s:stroke>
				<s:SolidColorStroke  weight="2" color="#323232" joints="bevel" alpha=".5"/>   
			</s:stroke>
		</s:Rect>

		<!-- la valeur initiale Ã©tait 30, mais bug hauteur si dpi haut -->
		<s:Rect alpha="1" left="0" right="{ background.right }" height="{ Main.popupTitleHeight }" topRightRadiusX="15">
			<s:fill> 
				<s:SolidColor color="#505050"/>
			</s:fill>
			<s:stroke>
				<s:SolidColorStroke  weight="2" color="#323232" joints="bevel" alpha=".5"/>   
			</s:stroke>
		</s:Rect>

		<!--
		Note: Setting the minimum size to 0 here so that changes to the host component's
		size will not be thwarted by this skin part's minimum size.   This is a compromise,
		more about it here: http://bugs.adobe.com/jira/browse/SDK-21143
		-->
		<!--- @copy spark.components.SkinnableContainer#contentGroup -->
		<s:Group id="contentGroup" left="0" right="0" top="0" bottom="0" minWidth="0" minHeight="0">
			<s:layout>
				<s:BasicLayout/>
			</s:layout>
		</s:Group>
	</s:Group>
	
</s:Skin>